# Copy this file to .streamlit/secrets.toml and fill in your values
# DO NOT commit secrets.toml to version control!

[database]
# PostgreSQL connection string
# For local SQLite, use: "sqlite:///./email_tracker.db"
DATABASE_URL = "postgresql://user:password@host:port/dbname"

[auth]
# Session secret key (generate a random string)
SESSION_SECRET_KEY = "your-secret-key-here"

# Admin credentials
ADMIN_USERNAME = "admin"
ADMIN_PASSWORD = "your-admin-password"

[email]
# Gmail credentials for email collection
GMAIL_ADDRESS = "your-email@gmail.com"
GMAIL_APP_PASSWORD = "your-app-password"

[api_keys]
# Anthropic API key for AI features
ANTHROPIC_API_KEY = "your-anthropic-api-key"

# Google API credentials (optional, for Gmail API)
GOOGLE_CLIENT_ID = "your-client-id"
GOOGLE_CLIENT_SECRET = "your-client-secret"

[app]
# Application settings
APP_NAME = "Tweener Fund Portfolio Intelligence"
COMPANY_NAME = "Tweener Fund"
SUPPORT_EMAIL = "support@tweenerfund.com"