# Authentication Configuration
# Copy this file to .env and update with your secure credentials

# Admin credentials (change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password_here

# Database configuration (if using external database)
DATABASE_URL=sqlite:///tracker.db

# Email configuration (if using email features)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token

# API keys (if using external APIs)
CLAUDE_API_KEY=your_claude_api_key

# Security settings
SESSION_TIMEOUT=28800  # 8 hours in seconds
ENABLE_HTTPS=true

# Gmail Configuration
GMAIL_USERNAME=your_gmail_address@gmail.com
GMAIL_PASSWORD=your_app_specific_password

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key

# SMTP Configuration (uses Gmail by default)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587 